---
interface Props {
  title: string;
  backgoundImg: String;
}
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/animations.css";


const { title, backgoundImg } = Astro.props;
const bgUrl = `url(${backgoundImg})`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />    
    <meta name="generator" content={Astro.generator} />     
    <script
      src="https://kit.fontawesome.com/0231b09d42.js"
      crossorigin="anonymous"></script>     
    <title>{title}</title>
  </head>
  <body >   
      
    <!-- BackGround Image -->
    <div class="absoluteBg"></div>     
    <div id="my-scrollbar">
        <Header />
        <slot />
        <Footer />    
    </div>       
    
  </body>  
  <script >
    import Scrollbar from 'smooth-scrollbar';
    Scrollbar.init(document.querySelector('#my-scrollbar')!,{
        damping:0.02
    });
</script>  
</html>
<style is:global define:vars={{ bgUrl }}>
  /* Fonts */  
  @font-face {
    font-family: "Roboto Condensed";
    src: url("/fonts/RobotoCondensed-VariableFont_wght.ttf");
  }
  @font-face {
    font-family: "Roboto";
    src: url("/fonts/Roboto/Roboto-Light.ttf");
  }
  @font-face {
    font-family: "Roboto Bold";
    src: url("/fonts/Roboto/Roboto-Medium.ttf");
  }
  @font-face {
    font-family: "Antonio";
    src: url("/fonts/Antonio/Antonio-VariableFont_wght.ttf");
  }
  :root {    
    --bg-color-1: #0053e1;
    --bg-color-2: #091929;
    --fg-color-1: #ffffff;
    --fg-color: #333333;
    --fg-color-2: #01f0dd;
    --fg-color-3: #ff9000;
    --size-title: 100px;
    --size-small: 14px;
    --size-medium: 16px;
    --size-large: 36px;
    --size-xl: 49px;
    --primary-font: "Roboto", Sans-serif;
    --primary-font-bold: "Roboto Bold", Sans-serif;
    --primary-font-condessed: "Roboto Condensed", Sans-serif;
    --seconday-font: "Antonio", Sans-serif;        
  }
  a {
    align-self: center;
  }
  p {
    margin: 0.5em;
  }
  html {
    font-family: var(--seconday-font);
  }
  body {
    background: var(--bg-color-1);
    background: linear-gradient(
      180deg,
      rgba(66, 83, 255, 1) 0%,
      rgba(1, 240, 221, 1) 32%,
      rgba(255, 255, 255, 1) 100%
    );
    margin: 0;
    overflow: hidden;    
    position: relative;
  }
  #my-scrollbar{
    height: 100dvh;
  }
  h1,
  h2,
  h3 {
    font-family: var(--seconday-font);
    margin: 0;
  }
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: var(--size-large);
  }
  * {
    font-size: var(--size-medium);
    color: var(--fg-color-4);
  }
  h1 {
    font-size: var(--size-xl);
    font-weight: 600;
    text-shadow: 12px 3px 13px rgba(0, 0, 0, 0.3);
    letter-spacing: 0.2;
    padding: 0;
  }
  a {
    font-size: inherit;
    text-decoration: none;
    color: inherit;
  }
  .absoluteBg {
    position: fixed;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-image: linear-gradient(360deg, #0066ffd1 51%, #0066ffd1 96%),
      var(--bgUrl);
  }
</style>
