---
import Layout from '../layouts/Layout.astro';
import ImageBanner from '../components/ImageBanner.astro';
---

<Layout title="Welcome to Astro." backgoundImg="./paginas-web-en-lima-tecnovedades.webp">		
	<main>
		<section>
			<h1>Ponemos tu negocio en Internet</h1>
			<h3>
				<span>EN TAN SOLO </span>
				<span id="circle-animated">
					7 DIAS
					<svg   xmlns="http://www.w3.org/2000/svg" viewBox="0 0 500 150" preserveAspectRatio="none"><path  class="animated-circled-dash" id="circle-animated" d="M325,18C228.7-8.3,118.5,8.3,78,21C22.4,38.4,4.6,54.6,5.6,77.6c1.4,32.4,52.2,54,142.6,63.7 c66.2,7.1,212.2,7.5,273.5-8.3c64.4-16.6,104.3-57.6,33.8-98.2C386.7-4.9,179.4-1.4,126.3,20.7"></path></svg>
				</span>	
			</h3>
			<div class="divider"><span></span></div>
			<div><button><a href="">Comunicate con un asesor</a></button></div>			
		</section>
		<ImageBanner>
			<div class="separator-img"><img src="https://tecnovedadesweb.com/wp-content/uploads/2022/09/linea.png"  width="290" height="58" alt=""></div>
