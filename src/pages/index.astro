---
import Layout from '../layouts/Layout.astro';
import ImageBanner from '../components/ImageBanner.astro';

---

<Layout title="Welcome to Astro." backgoundImg="./paginas-web-en-lima-tecnovedades.webp">		
	<main>
		<section>
			<h1>Ponemos tu negocio en Internet</h1>
			<h3>
				<span>EN TAN SOLO </span>
				<span>
					7 DIAS
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 500 150" preserveAspectRatio="none"><path id="circle-animated" d="M325,18C228.7-8.3,118.5,8.3,78,21C22.4,38.4,4.6,54.6,5.6,77.6c1.4,32.4,52.2,54,142.6,63.7 c66.2,7.1,212.2,7.5,273.5-8.3c64.4-16.6,104.3-57.6,33.8-98.2C386.7-4.9,179.4-1.4,126.3,20.7"></path></svg>
				</span>	
			</h3>
			<div class="divider"><span></span></div>
			<div><button><a href="">Comunicate con un asesor</a></button></div>			
		</section>
		<ImageBanner></ImageBanner>		
		<ImageBanner></ImageBanner>
	</main>
	
</Layout>

<style>	
main{
	display: flex;	
	justify-content: center;
	flex-direction: column;	
	align-items: center;
	section{
		width: 70%;
		height: 750px;
		display: flex;
		flex-direction: column;		
		justify-content: center;
		text-align: center;
		h1{
			color: var(--fg-color-1);			
		}
	}
}
h3{	
	letter-spacing: -0.5px;
	margin: 20px auto;	
	& > h1{
		color: var(--fg-color-1);		
	}
}
span{
	font-size: inherit;
	color: yellow;
	position: relative;
	& > svg{
		position: absolute;
		top: 50%;
		left: 50%;
		width: calc(100% + 20px);
		height: calc(100% + 20px);
		transform: translate(-50%,-50%);
		font-weight: bold;
		font-size: 40px;
	}
}
#circle-animated{
	fill: none;
	stroke: #FF5A00;
	font-size: var(--size-small);
	font-weight: 600;
	stroke-width: 9px;
}
.divider{
	display: flex;
	justify-content: center;
	height: 3px;
	margin-bottom: 20px;
	padding: 30px 0px;
	& > span{			
		height: 100%;
		width: 5rem;
		background-color: white;
	}
}
button{
	width: 14rem;
	font-size: 17px;
	letter-spacing: 0.2px;
	font-family: var(--primary-font-condessed);
	text-align: center;
	font-weight: 500;
	font-stretch: 20%;
	line-height: 1;
	word-spacing: 0px;
	padding: 14px 0px;
	background-color: var(--fg-color-3);
	border-radius: 10px;
	color: var(--fg-color-1);
	border: 0px;	
	animation: scaleButton ;	
	animation-duration: 0.8s;	
	animation-timing-function: linear;
	animation-iteration-count: infinite;
	animation-play-state: paused;
	&:hover{
		animation-play-state: running;
		background-color: var(--fg-color-1);
		color: #0069FF;
	}
}
@keyframes scaleButton{
	25%{
		transform: scale(1.1);
	}
	75%{
		transform: scale(0.9);
	}
}

</style>
